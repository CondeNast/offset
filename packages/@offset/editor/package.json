{
  "name": "@offset/editor",
  "version": "0.1.0",
  "description": "Offset Editor",
  "main": "dist/commonjs/index.js",
  "module": "dist/modules/index.js",
  "types": "dist/commonjs/index.d.ts",
  "scripts": {
    "build": "rm -rf dist; tsc -p . & tsc -p . --module ESNext --outDir dist/modules/ --target ES2017; exit 0",
    "lint": "tslint -c ./tslint.json 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "start": "parcel public/index.html --no-hmr",
    "test": "../../../node_modules/.bin/jest packages/@offset/$(basename $PWD) --config=./jest.config.js"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "peerDependencies": {
    "@atjson/document": "*",
    "@atjson/renderer-react": "*",
    "react": "*"
  },
  "devDependencies": {
    "@atjson/document": "^0.22.3",
    "@atjson/offset-annotations": "^0.23.0",
    "@types/styled-components": "^4.4.0",
    "sass": "^1.23.3",
    "styled-components": "^4.4.1",
    "typescript": "^3.7.2"
  }
}
